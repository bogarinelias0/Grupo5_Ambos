<html lang="es">
<head>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/catalogo.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
    <title>Ambos Seven - Productos</title>
    <%-include('./partials/head') %>
</head>
<body>
    <header>
      <%-include('./partials/navbar') %>
    </header>

    <main id="mainCatalogo">
        <h2 class="titulo2">Catálogo de productos</h2>

        <div id="opcionesFiltrado">

            <select class="form-select filtro1" aria-label="Default select example">
                <option selected>Más destacados</option>
                <option value="mayor">Mayor precio</option>
                <option value="menor">Menor precio</option>
            </select>

            <!--Al presionar este boton aparecera un cuadro con opciones de filtrado avanzadas-->
            <button type="button" class="btn"><i class="fas fa-filter"></i></button>

        </div>

        <section id="productosDestacados">
          <% for (let i =0; i<productos.length; i++) { %>
            <article>
              <img src= <%=productos[i].srcImg%> >
              <div>
                <h3><%= productos[i].nombre%></h3>
                <h3>$<%= productos[i].precio%></h3>
                <i class="far fa-plus-square"></i>
              </div>
            </article>
          <%}%> 
        </section>

    </main>

    <%-include('./partials/footer') %>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>  
  
</body>
</html>